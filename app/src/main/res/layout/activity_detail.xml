<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cucha.com.br.simpleforecast.DetailActivity">

    <TextView
        android:paddingTop="@dimen/grid"
        android:paddingBottom="@dimen/grid"
        android:textSize="20sp"
        android:text="@string/temperatura_atual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="@dimen/grid"
        android:paddingBottom="@dimen/grid"
        android:textSize="20sp"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="@dimen/grid"
        android:paddingBottom="@dimen/grid"
        android:textSize="20sp"
        android:text="@string/temperatura_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="@dimen/grid"
        android:paddingBottom="@dimen/grid"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="@dimen/grid"
        android:paddingBottom="@dimen/grid"
        android:textSize="20sp"
        android:text="@string/temp_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="@dimen/grid"
        android:paddingBottom="@dimen/grid"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="@dimen/grid"
        android:paddingBottom="@dimen/grid"
        android:textSize="20sp"
        android:text="@string/pressao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="@dimen/grid"
        android:paddingBottom="@dimen/grid"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
